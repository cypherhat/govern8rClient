<ConfirmScreen>:
    FloatLayout:
        Label:
            text: "Please check your email. After confirmation proceed."
            pos_hint: {'x': .1, 'y': .7}
            size_hint: .7, .1
            halign: 'left'
            font_size: '20sp'

        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:

                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: '  Email Confirmation'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    icon:''
                    disabled: True
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.confirm_email_callback()