<CreateWalletScreen>:
    FloatLayout:
        Label:
            text: "Password : "
            pos_hint: {'x': .1, 'y': .7}
            size_hint: .23, .1
            halign: 'left'
            font_size: '20sp'
        TextInput:
            id: password
            pos_hint: {'x': .3, 'y': .7}
            size_hint: .6, .1
            password: 'true'
            font_size: '40sp'
        Label:
            text: "Verify Password : "
            pos_hint: {'x': .1, 'y': .5}
            size_hint: .16, .1
            halign: 'left'
            font_size: '20sp'
        TextInput:
            id: retype_password
            pos: 400, 500
            pos_hint: {'x': .3, 'y': .5}
            size_hint: .6, .1
            password: 'true'
            font_size: '40sp'
        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:
                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: '  Create Wallet'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    icon:'img/prev.png'
                    disabled: True
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.create_wallet_callback()