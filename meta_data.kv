<MetadataScreen>:
    FloatLayout:
        Label:
            text: "File Name : "
            pos_hint: {'x': .0, 'y': .7}
            size_hint: .16, .1
            halign: 'right'
            text_size: (600, 60)
            font_size: '20sp'
        Label:
            pos_hint: {'x': .3, 'y': .7}
            id: filename
            text: ""+root.notary_file
            size_hint: .6, .1
            text_size: (600, 60)
            font_size: '20sp'

        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:
                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: ' File Info'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    icon:'img/prev.png'
                    text:'Previous'
                    on_press: root.manager.current = 'selectnotaryfile'
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.manager.current = 'uploadoption'