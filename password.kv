<PasswordScreen>:
    FloatLayout:

        Label:
            text: "Wallet Password : "
            pos_hint: {'x': .07, 'y': .7}
            size_hint: .23, .07
            halign: 'left'
            font_size: '28sp'
        TextInput:
            id: password
            pos_hint: {'x': .35, 'y': .7}
            size_hint: .6, .07
            password: 'true'
            font_size: '22sp'

        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:
                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: ' Open Wallet'
                    text_size: '28sp'
                    font_size: '28sp'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    icon:''
                    disabled:True
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.open_wallet_callback()