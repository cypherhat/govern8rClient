<PasswordScreen>:
    FloatLayout:
        Image:
            source: 'img/logo.png'
            pos_hint: {'x': .25, 'y': .85}
            size_hint: .5, .1
        Label:
            text: "Notary - Open Wallet "
            pos_hint: {'x': .1, 'y': .7}
            size_hint: .5, .1
            font_size: '30sp'
        Label:
            text: "Wallet Password : "
            pos_hint: {'x': .07, 'y': .6}
            size_hint: .23, .07
            halign: 'left'
            font_size: '28sp'
        TextInput:
            id: password
            pos_hint: {'x': .35, 'y': .6}
            size_hint: .6, .07
            password: 'true'
            font_size: '30sp'
        Button:
            text: 'Open'
            pos_hint: {'x': .35, 'y': .45}
            size_hint: .3, .1
            font_size: '28sp'
            on_press: root.open_wallet_callback()