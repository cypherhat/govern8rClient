<PasswordScreen>:
    FloatLayout:
        Label:
            text: "Notary - Open Wallet "
            pos_hint: {'x': .1, 'y': .8}
            size_hint: .5, .1
            font_size: '30sp'
        Label:
            text: "Wallet Password : "
            pos_hint: {'x': .1, 'y': .7}
            size_hint: .23, .1
            halign: 'left'
            font_size: '20sp'
        TextInput:
            id: password
            pos_hint: {'x': .35, 'y': .7}
            size_hint: .6, .1
            password: 'true'
            font_size: '40sp'
        Button:
            text: 'Open'
            pos_hint: {'x': .35, 'y': .3}
            size_hint: .3, .1
            font_size: '20sp'
            on_press: root.open_wallet_callback()