#:kivy 1.8.0
#:import Factory kivy.factory.Factory
<RegisterWalletScreen>:
    FloatLayout:

        Label:
            text: "Email : "
            pos_hint: {'x': .1, 'y': .7}
            size_hint: .23, .1
            halign: 'left'
            font_size: '20sp'
        TextInput:
            id: email
            pos_hint: {'x': .3, 'y': .7}
            size_hint: .6, .1
            font_size: '40sp'

        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:

                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: '  Register Wallet'
                    with_previous: False


                ActionOverflow:
                ActionButton:
                    icon:'img/prev.png'
                    disabled: True
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.register_wallet_callback()
