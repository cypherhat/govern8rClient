#:kivy 1.8.0
#:import Factory kivy.factory.Factory
<RegisterWalletScreen>:
    FloatLayout:
        Label:
            text: "Email : "
            pos_hint: {'x': .07, 'y': .7}
            size_hint: .23, .07
            halign: 'left'
            font_size: '28sp'
        TextInput:
            id: email
            pos_hint: {'x': .35, 'y': .7}
            size_hint: .6, .07
            font_size: '30sp'

        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:

                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: '  Register Wallet'
                    with_previous: False


                ActionOverflow:
                ActionButton:
                    icon:''
                    disabled: True
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.register_wallet_callback()
