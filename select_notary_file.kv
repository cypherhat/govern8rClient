<SelectNotaryFileScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:

                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: '  Select File'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    icon:'img/prev.png'
                    on_press: root.manager.current = 'landingpage'
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.manager.current = 'metadata'
        FileChooserIconView:
            id: filechooser
            show_hidden: True
            on_selection: root.my_callback(filechooser.selection)
            size: .9, .6
        Label:
            text: ""
            id: filelabel
            pos_hint: {'x': .0, 'y': .0}
            size_hint: .1, .1
            halign: 'left'
            font_size: '20sp'
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 50
        Label:
            text: "Please select a file to upload above:"
            id: filelabel
            pos_hint: {'x': .0, 'y': .0}
            size_hint: .5, .1
            halign: 'left'
            font_size: '20sp'
