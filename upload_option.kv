<UploadFileScreen>:
    FloatLayout:
        Label:
            id:selected_file
            text: "Selected File:" + root.notary_file
            pos_hint: {'x': .1, 'y': .9}
            size_hint: .7, .1
            halign: 'left'
            font_size: '20sp'
        Label:
            text: "You can upload your file for safe and secure storage."
            pos_hint: {'x': .1, 'y': .7}
            size_hint: .8, .1
            font_size: '30sp'
        Label:
            text: "Do you want to notarize and upload this file?"
            pos_hint: {'x': .1, 'y': .6}
            size_hint: .7, .1
            halign: 'left'
            font_size: '20sp'
        Button:
            text: 'Yes'
            pos_hint: {'x': .1, 'y': .5}
            size_hint: .2, .1
            font_size: '20sp'
            on_press: root.yes_callback()
        Button:
            text: 'Just Notarize'
            pos_hint: {'x': .3, 'y': .5}
            size_hint: .2, .1
            font_size: '20sp'
            on_press: root.no_callback()
        ActionBar:
            pos_hint: {'x': .0, 'y': .9}
            ActionView:

                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: ' Upload'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    icon:'img/prev.png'
                    on_press: root.manager.current = 'metadata'
                ActionButton:
                    icon:'img/next.png'
                    text: 'Next'
                    on_press: root.manager.current = 'landingpage'